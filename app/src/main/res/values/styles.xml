<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Pomodoro.MaterialCardView" parent="Widget.MaterialComponents.CardView">
    </style>

    <style name="Widget.Pomodoro.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance"> @style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Pomodoro.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/image_button_ripple</item>

        <item name="android:clickable">true</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Pomodoro.CustomProgressBar" parent="">
        <item name="customColor" >?attr/colorSecondary</item>
        <item name="customStyle">fill</item>
        <item name="circleBackground">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Pomodoro.BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Pomodoro.BottomSheetStyle.TimePicker</item>
        <item name="android:windowBackground">@drawable/grey_gradient</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>

    </style>

    <style name="Widget.Pomodoro.BottomSheetStyle.TimePicker" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Pomodoro.LargeComponent</item>
        <item name="backgroundTint">@color/indigo</item>
    </style>
</resources>